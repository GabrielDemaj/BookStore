{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["jest", "@types/jest"],
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@icons/*": ["./icons/*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@navigation/*": ["./navigation/*"],
      "@providers/*": ["./providers/*"],
      "@localization/*": ["./localization/*"],
      "@screens/*": ["./screens/*"],
      "@store/*": ["./store/*"],
      "@utils/*": ["./utils/*"],
      "@variables/*": ["./variables/*"]
    },
    "skipLibCheck": true
  },
  "typeRoots": ["./types"]
}
